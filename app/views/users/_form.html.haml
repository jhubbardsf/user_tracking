= form_for @user, html: { class: "form form-horizontal user" }, data: { id: @user.id, record_url: user_user_clicks_path(@user) } do |f|
  .form-group
    = f.label :name, class: 'control-label col-lg-2'
    .col-lg-4
      = f.text_field :name, class: 'form-control record-click', required: true
    = f.error_span(:name)
  .form-group
    = f.label :email, class: 'control-label col-lg-2'
    .col-lg-4
      = f.text_field :email, class: 'form-control record-click', required: true
    = f.error_span(:email)
  .form-group
    = f.label :city, class: 'control-label col-lg-2'
    .col-lg-4
      = f.text_field :city, class: 'form-control record-click', required: true
    = f.error_span(:city)
  .form-group
    = f.label :state, class: 'control-label col-lg-2'
    .col-lg-4
      = f.text_field :state, class: 'form-control record-click', required: true
    = f.error_span(:state)
  .form-group
    = f.label :zipcode, class: 'control-label col-lg-2'
    .col-lg-4
      = f.text_field :zipcode, class: 'form-control record-click', required: true
    = f.error_span(:zipcode)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.track', :default => t("helpers.links.track")), user_user_clicks_path(@user), :class => 'btn btn-default'
